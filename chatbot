<body>
  <div class="chatbox">
    <div class="messages" id="messages"></div>
    <div>
      <input type="text" id="userInput" placeholder="Type your issue..." />
      <button onclick="sendMessage()">Send</button>
    </div>
  </div>

  <script>
    const messagesDiv = document.getElementById("messages");

    function appendMessage(text, sender) {
      const msg = document.createElement("div");
      msg.className = "msg " + sender;
      msg.innerText = text;
      messagesDiv.appendChild(msg);
      messagesDiv.scrollTop = messagesDiv.scrollHeight;
    }

    function sendMessage() {
      const input = document.getElementById("userInput");
      const text = input.value.trim();
      if (!text) return;

      appendMessage(text, "user");
      input.value = "";

      setTimeout(() => botReply(text), 500);
    }

    function botReply(userText) {
      const commonQuestions = {
        "reset password": "ğŸ”‘ You can reset your password from Settings â†’ Security â†’ Reset Password.",
        "card blocked": "ğŸ’³ If your card is blocked, go to Cards â†’ Unblock Card.",
        "transaction issue": "ğŸ“Š Please check your Transactions page for details. If unauthorized, raise a ticket.",
        "loan": "ğŸ¦ Brex currently does not provide personal loans. Only business credit and spend management.",
        "contact support": "ğŸ“ You can call support at +1-800-BREX or continue here."
      };

      let found = null;
      for (let key in commonQuestions) {
        if (userText.toLowerCase().includes(key)) {
          found = commonQuestions[key];
          break;
        }
      }

      if (found) {
        appendMessage(found, "bot");
      } else {
        // If AI can't solve â†’ Raise Ticket
        const ticketId = "TICKET-" + Math.floor(Math.random() * 10000);
        appendMessage("âš ï¸ I couldnâ€™t solve this. Raising a support ticket... Your Ticket ID is: " + ticketId, "bot");
      }
    }
  </script>
